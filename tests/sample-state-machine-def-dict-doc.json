{
    "$schema": "urn:x-bloomberg-com:app-portal:state-machine-definition-dictionary",
    "definitionId": "a-sample-statemachine-definition",
    "description": "",
    "initStateId": "state1",
    "states": {
        "state1": {
            "stateId": "state1",
            "descption": "listen ib",
            "entryActivity": {
                "activityId": "123456-1",
                "name": "listen-ib",
                "config": {
                    "room-id": "my room"
                }
            }
        },
        "state2": {
            "stateId": "state2",
            "descption": "a transient state",
            "entryActivity": {
                "activityId": "activity-return-event",
                "name": "return event2",
                "config": {
                    "event": {
                        "eventId": "event-from-entry-activity",
                        "properties": {
                            "info": "test for transient state"
                        }
                    }
                }
            }
        },
        "state3": {
            "stateId": "state3",
            "descption": "check citi bike",
            "entryActivity": {
                "activityId": "123456-2",
                "name": "http get",
                "config": {
                    "url": "https://www.citi-bike.com"
                }
            }
        }
    },
    "stateTransitions": {
        "state1": {
            "event1": "state2",
            "event2": "state3"
        },
        "state2": {
            "event3": "state3",
            "event1": "state1",
            "event-from-entry-activity": "state3"
        }
    }
}