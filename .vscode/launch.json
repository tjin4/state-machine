    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk", "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "--config", "${workspaceRoot}/jest.config.ts",
                "--testNamePattern", "StateMachineEngine.createInstance",
                "--coverage", "false" 
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}